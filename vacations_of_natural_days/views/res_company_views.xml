<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="it_view_company_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit.vacations_natural_days</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">

            <group name="social_media" position="before">
                <group string="Leaves">
                    <field name="vacations_calendar_days"/>
                    <field name="resource_calendar_id" attrs="{'invisible': [('vacations_calendar_days', '=', False)]}"/>
                </group>
            </group>

        </field>
    </record>
</odoo>